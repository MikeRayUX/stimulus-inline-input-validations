#!/usr/bin/env bash

# Exit when any command fails
set -e

# Check Javascript code formatting
echo "npx eslint src"
npx eslint src 

# Check HTML formatting
echo "htmlhint ./index.html"
htmlhint ./index.html

# Run the test suite
echo 'yarn run cypress run --spec 'cypress/e2e/**/*.cy.js' --browser chrome'
yarn yarn run cypress run --spec 'cypress/e2e/**/*.cy.js' --browser chrome 
